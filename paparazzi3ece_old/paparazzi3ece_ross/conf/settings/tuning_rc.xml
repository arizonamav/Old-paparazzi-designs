

<!-- A conf to use to tune an A/C using only the rc -->

<settings>

  <rc_settings>
    <rc_mode NAME="AUTO1">
      <rc_setting VAR="ir_pitch_neutral" RANGE="2" RC="gain_1_up" TYPE="float"/>
      <rc_setting VAR="ir_roll_neutral" RANGE="-2" RC="gain_1_down" TYPE="float"/>
    </rc_mode>
    <rc_mode NAME="AUTO2">
      <rc_setting VAR="h_ctl_course_pgain" RANGE="0.1" RC="gain_1_up" TYPE="float"/>
      <rc_setting VAR="h_ctl_elevator_of_roll" RANGE=".2" RC="gain_1_down" TYPE="float"/>
    </rc_mode>
  </rc_settings>

</settings>
